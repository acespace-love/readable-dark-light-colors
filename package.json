{
  "name": "dark-light-colours",
  "version": "0.1.0",
  "description": "A utility library for color management with dark/light mode adaptations used internally by AceSpace",
  "author": "SpaceTsundere",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dark-light-colours.git"
  },
  "keywords": [
    "colors",
    "dark-mode",
    "light-mode",
    "gradient",
    "themes",
    "accessibility",
    "wcag"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.lib.json && tsc --project tsconfig.cjs.json",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "example:dev": "cd example && npm run dev",
    "example:build": "cd example && npm run build",
    "example:install": "cd example && npm install"
  },
  "dependencies": {
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@types/tinycolor2": "^1.4.6",
    "typescript": "~5.8.3"
  }
}